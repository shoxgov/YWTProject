<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="6dip"
    android:paddingTop="6dip">


    <TextView
        android:id="@+id/notic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dip"
        android:text="公告标题 " />

    <TextView
        android:id="@+id/notic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/notic_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dip"
        android:text="2017.01.18" />


    <TextView
        android:id="@+id/notic_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notic_title"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="6dip"
        android:text="中国无限制发行人民币，财富重新规模的财富分配席卷中国，机遇暗藏股市。了解中国3.0获利规则，避免财富严重缩水"
        android:textColor="@color/black" />

</RelativeLayout>
