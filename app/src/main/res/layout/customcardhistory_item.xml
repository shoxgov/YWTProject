            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="10"
            android:gravity="right"
            android:text="金额:" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:text="20" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
