        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:weightSum="50">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="10.09"
